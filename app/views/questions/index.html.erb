<div class="container">

<h1>Q & A 게시판</h1>

<table class="table">
  <thead>
    <tr>
      <th>제목</th>
      
      <th>작성자</th>
     
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.title, question %></td>
        
        
        <td><%= question.user.name %></td>
        
        
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path %>

</div>